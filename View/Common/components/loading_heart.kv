<LoadingHeart@MDRelativeLayout>
  size: dp(48), dp(48)
  adaptive_size: True

  MDIcon:
    icon: "heart-pulse"
    halign: "center"
    theme_font_size: "Custom"
    font_size: dp(32)
    theme_height: "Custom"
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

  MDCircularProgressIndicator:
    size_hint: None, None
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: 1, 1
