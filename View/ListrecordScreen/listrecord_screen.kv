<RecordCard>
  padding: "16dp", "8dp"
  spacing: dp(16)
  ripple_behavior: True 
  theme_bg_color: "Custom"

  MDBoxLayout:
    size_hint_x: None
    width: dp(80)
    background: "assets/images/logo.png"
    md_bg_color: "black"

    # FitImage:
    #   source: "assets/images/logo.png"

    
  MDBoxLayout:
    orientation: "vertical"
    pos_hint: {"center_y": .5}
    adaptive_size: True
    spacing: dp(8)

    MDLabel:
      text: "General Report"
      adaptive_size: True
      bold: True

    MDLabel:
      text: root.date #"03, Nov 2025"
      adaptive_size: True
      bold: True

    MDLabel:
      text: root.time # "12:50AM"
      adaptive_size: True
      bold: True

<ListView@MDRecycleView>
  viewclass: "RecordCard"

  RecordRecycleBoxLayout:
    # md_bg_color: "blue"
    default_width: self.width - 24*2
    default_height: dp(100)
    adaptive_height: True
    orientation: 'vertical'
    spacing: dp(16)
    padding: dp(24)

<ListrecordScreenView>
  listview: listview
  md_bg_color: (1,1,1,1)
  MDBoxLayout:
    orientation: 'vertical'

    MDTopAppBar:
      id: topBar
      type: "small"
      pos_hint: {"top": 1}
      height: dp(48)

      MDTopAppBarTitle:
        id: topBarTitle
        text: "My Results"
        bold: True

      MDTopAppBarTrailingButtonContainer:
        MDActionTopAppBarButton:
          icon: "refresh"
          on_release: root.controller.refresh_list()

    ListView:
      id: listview

