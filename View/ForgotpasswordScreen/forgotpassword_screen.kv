
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Clock kivy.clock

<ForgotpasswordScreenView>
  email_field: email_field
  password_field: password_field

  md_bg_color: get_color_from_hex("#FFFFFF")
  
  MDTopAppBar:
    id: topBar
    type: "small"
    pos_hint: {"top": 1}
    height: dp(50)
    md_bg_color: get_color_from_hex("#FFFFFF")
    theme_bg_color: "Custom"

    MDTopAppBarLeadingButtonContainer:
      MDActionTopAppBarButton:
        icon: "arrow-left"
        on_release: root.manager.goBack()

  MDBoxLayout:
    orientation: "vertical"
    spacing: dp(8)
    adaptive_height: True
    padding: 0, dp(20)
    pos_hint: {"center_y": .5}

    MDBoxLayout:
      orientation: "vertical"
      adaptive_height: True
      size_hint_x: 0.8
      pos_hint: {"center_x": .5}
      spacing: dp(20)

      LoginFormField:
        id: email_field
        icon: "email"
        label: "Email"
        text: "john@mail"

      LoginFormField:
        id: password_field
        # required: True
        icon: "account-key"
        label: "Password"
        text: "password"

      LoginFormButton:
        id: login_btn
        label: "Reset Password"
        on_release: root.reset_action()


